<!-- app/views/tasks/new.html.erb -->
<h1>New Task</h1>
<%= form_with(model: @task, url: tasks_path) do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :details %><br>
    <%= form.text_area :details %>
  </p>
  <p>
    <%= form.check_box :completed %>
    <%= form.label :completed %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<%= link_to "Back to list", tasks_path, class: "btn btn-primary" %>
<% end %>
